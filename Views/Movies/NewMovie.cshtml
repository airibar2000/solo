@model solo.ViewModels.MoviesWithGener
@{
    /**/

    ViewBag.Title = "NewMovieView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.MovieAction</h2>

@{Html.EnableClientValidation(true);
    @*@Html.ValidationSummary(true, "Please Correct the Information Bellow")*@
}
@using (Html.BeginForm("Save", "Movies"))
    {
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "form-control" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate, new { @class = "form-control" })
        @Html.TextBoxFor(m => m.ReleaseDate,"{0:MM/dd/yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreId)
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "GenreId", "GenreName"), "Select type of Genres", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Id);
    <button type="submit" class="btn btn-primary">Save</button>
    }
